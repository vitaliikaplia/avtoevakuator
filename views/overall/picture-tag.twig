{% if ext == 'svg' %}
    <img src="{{ picture_url }}"{% if picture_alt %} alt="{{ picture_alt }}"{% endif %} loading="{{ loading }}">
{% else %}
    {% if webp_url %}
    <picture>
        {% if size == 'full' %}
            <img src="{{ webp_url }}"{% if picture_alt %} alt="{{ picture_alt }}"{% endif %} width="{{ picture_w }}" height="{{ picture_h }}" loading="{{ loading }}">
        {% else %}
            {% set new_width = size %}
            {% set new_height = ( new_width / picture_w ) * picture_h %}
            <img src="{{ webp_url|resize(size) }}"{% if picture_alt %} alt="{{ picture_alt }}"{% endif %} width="{{ new_width }}" height="{{ new_height | ceil }}" loading="{{ loading }}">
        {% endif %}
    </picture>
    {% else %}
        {% if size == 'full' %}
        <img src="{{ picture_url }}"{% if picture_alt %} alt="{{ picture_alt }}"{% endif %} width="{{ picture_w }}" height="{{ picture_h }}" loading="{{ loading }}">
        {% else %}
            {% set new_width = size %}
            {% set new_height = ( new_width / picture_w ) * picture_h %}
            <img src="{{ picture_url|resize(size) }}"{% if picture_alt %} alt="{{ picture_alt }}"{% endif %} width="{{ new_width }}" height="{{ new_height | ceil }}" loading="{{ loading }}">
        {% endif %}
    {% endif %}
{% endif %}
